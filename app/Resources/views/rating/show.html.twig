{% extends 'template/defaultTemplate.html.twig' %}

{% block page_title %}<title>Rating Detail </title>{% endblock %}

{% block content %}
    <h1>Rating</h1>

    <table class="left-th-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rating.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ rating.userId }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ rating.note }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ rating.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_rating_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_rating_edit', { 'id': rating.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
