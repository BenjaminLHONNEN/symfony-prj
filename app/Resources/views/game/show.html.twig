{% extends 'template/defaultTemplate.html.twig' %}

{% block page_title %}<title>Game Detail {{ game.name }}</title>{% endblock %}

{% block content %}
    <h1>Game</h1>

    <table class="left-th-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ game.image }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul>
                    {% for tag in game.tags %}
                        <li>{{ tag }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_game_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_game_edit', { 'id': game.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
